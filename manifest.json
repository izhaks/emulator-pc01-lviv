{
    "manifest_version" : 2,
    "name" : "Emulator PC-01 Lviv",
    "short_name" : "Emulator",
    "description" : "PC-01 Lviv computer emulator written in JavaScript and HTML5",
    "version" : "1.1.0",
    "author" : "Oleg Dolgarev",
    "minimum_chrome_version" : "32",
    "offline_enabled" : true,
    "app" : {
        "background" : {
            "scripts" : ["background.js"],
            "persistent": false
        }
    },
    "icons" : {
        "16" : "lviv-16.png",
        "128" : "lviv-128.png"
    },
    "permissions" : [
        {"fileSystem" : ["write"]},
        "app.window.fullscreen"
    ]
}